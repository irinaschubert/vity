<resources>

    <!-- Themes -->
    <style name="Vity_Theme_Bootscreen" parent="android:Theme.DeviceDefault.Light.NoActionBar.Fullscreen" >
    </style>

    <style name="Vity_Theme_Standard" parent="android:Theme.Holo.Light" >
        <item name="android:popupMenuStyle">@style/overflow</item>
        <item name="android:actionBarStyle">@style/actionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/overflowButton</item>
        <item name="android:colorPrimary">@color/vity_bar</item>
        <item name="android:colorPrimaryDark">@color/vity_status_bar</item>
        <item name="android:textColorPrimary">@color/vity_bar_text</item>
        <item name="android:windowBackground">@color/vity_background</item>
        <item name="android:navigationBarColor">@color/vity_navigation_bar</item>
    </style>

    <style name="overflowButton" parent="android:Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_black_24dp</item>
    </style>
    <style name="overflow" parent="android:Widget.Holo.Light.PopupWindow">
        <item name="android:popupBackground">@color/vity_background</item>
    </style>
    <style name="actionBar" parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/vity_bar</item>
    </style>

    <!-- SCHRIFTEN -->
    <!-- Title Vity -->
    <style name="vity_gross">
        <!--item name="android:fontFamily">@font/vity20db</item-->
        <item name="android:textSize">80sp</item>
    </style>
    <!-- General -->
    <style name="text_normal">
        <item name="android:fontFamily">@font/anonymous_pro</item>
        <item name="android:textSize">15sp</item>
        <item name="android:color">@color/text_color</item>
    </style>
    <!-- Titles -->
    <style name="text_title" parent="text_normal">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- Hints -->
    <style name="text_hints" parent="text_normal">
        <item name="android:color">@color/text_color_hints</item>
        <item name="android:textStyle">italic</item>
    </style>
    <!-- Buttons -->
    <style name="text_buttons" parent="text_normal">
        <item name="android:textColor">@color/text_color_buttons</item>
        <item name="android:textAlignment">center</item>
    </style>


    <!-- ELEMENTE / ATTRIBUTE -->
    <!-- Buttons -->
    <style name="btn_standard" parent="text_buttons">
        <item name="android:background">@drawable/btn_style</item>
    </style>
    <style name="btn_round" parent="text_buttons">
        <item name="android:background">@drawable/btn_style_round</item>
    </style>

    <!-- LAYOUT -->
    <!-- Title -->
    <style name="title_complete" parent="text_title">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:layout_marginTop">20sp</item>
    </style>
    <!-- Button -->
    <style name="btn_standard_complete" parent="btn_standard">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginBottom">20sp</item>
    </style>
    <style name="btn_map_new_complete" parent="btn_round">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="btn_map_search_complete" parent="btn_round">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">100dp</item>
    </style>
    <style name="btn_map_navigate_complete" parent="btn_round">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_marginBottom">180dp</item>
    </style>
    <!-- Spinner -->
    <style name="spinner_complete" parent="text_normal">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginBottom">20sp</item>
        <item name="android:popupBackground">@drawable/spinner_style</item>
    </style>
    <!-- Form Text Input -->
    <style name="form_text_complete" parent="text_hints">
        <item name="android:layout_marginLeft">10sp</item>
        <item name="android:layout_marginRight">10sp</item>
        <item name="android:layout_marginBottom">20sp</item>
    </style>
    
    <!-- List Item -->
    <style name="style_list_item" parent="text_normal">
        <item name="android:strokeWidth">0.5</item>
    </style>

</resources>
