<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Activity.ActivitySearch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        style="@style/title_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titel_search"/>

    <EditText
        style="@style/form_text_complete"
        android:id="@+id/search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/form_search"
        android:inputType="text"/>

    <Spinner
        android:id="@+id/new_category"
        style="@style/spinner_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:entries="@array/categories"
        android:entryValues="@array/category_values"/>

    <Spinner
    style="@style/spinner_complete"
    android:id="@+id/search_radius"
    android:drawSelectorOnTop="true"
    android:entries="@array/radius"
    android:entryValues="@array/radius_values"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10sp"
            android:layout_marginLeft="10sp"
            android:id="@+id/list_activities">
        </ListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_search"
                style="@style/btn_standard_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.45"
                android:onClick="onClickSearchActivity"
                android:text="@string/btn_search" />

                <Button
                    android:id="@+id/search_btn_cancel"
                    style="@style/btn_standard_complete"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.45"
                    android:onClick="onClickCancel"
                    android:text="@string/btn_cancel" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
