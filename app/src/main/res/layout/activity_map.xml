<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ActivityMap">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ActivityMap" />

    <ImageButton
        android:id="@+id/btn_map_new"
        style="@style/btn_round"
        android:onClick="goToNewActivity"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="20sp" />

    <ImageButton
        android:id="@+id/btn_map_search"
        style="@style/btn_round"
        android:onClick="goToSearchActivity"
        android:src="@drawable/ic_search_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="100sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
/>

    <ImageButton
        android:id="@+id/btn_map_navigate"
        style="@style/btn_round"
        android:onClick="goNavigate"
        android:src="@drawable/ic_navigation_black_24dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="180sp"
        android:layout_marginEnd="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>


